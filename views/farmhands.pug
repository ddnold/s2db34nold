extends layout

block content
  h1= title
  - var results = results
  div(class='container-fluid')
    div(class='row m-1')
      each value in results
        - let destination = `dispatch(\"/farmhands/update?id=${value._id}\")`
        div(class='col-sm-2') Name: #{value.name}<br>Age: #{value.age}<br>Height: #{value.height}
          <br>
          button.btn(class="btn-primary m1-1", onclick=destination) Update 

  script. 
    function dispatch(path){
      window.location.href=path
    }
  
